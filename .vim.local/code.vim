" General settings for writing code in any language.

" Code folding.
set nofoldenable

" Open NerdTree.
map <leader>N :NERDTreeToggle<CR>

" Open TagList.
"map <leader>tl :TlistToggle<CR>

" Open TaskList.
map <leader>l :TaskList<CR>

" Easily move code blocks.
vnoremap < <gv
vnoremap > >gv

" Vim Airline
set laststatus=2
